<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.annesophie.test_decat.CreateAccountActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:id="@+id/layoutLogoDecat"
        android:layout_marginBottom="25dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/imageViewLogoDecat"
            android:src="@drawable/logo_decathlon" />

    </LinearLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutFirstname"
        android:layout_below="@id/layoutLogoDecat">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Firstname"
            android:id="@+id/textViewFirstname"
            android:layout_marginRight="10dp"
            android:textSize="20dp"
            android:layout_alignParentLeft="true"/>

        <EditText
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:textAlignment="center"
            android:id="@+id/editTextFirstname"
            android:hint="Firstname"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutLastname"
        android:layout_below="@id/layoutFirstname">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Lastname"
            android:id="@+id/textViewLastname"
            android:layout_marginRight="10dp"
            android:textSize="20dp"
            android:layout_alignParentLeft="true"/>

        <EditText
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:textAlignment="center"
            android:id="@+id/editTextLastname"
            android:hint="Lastname"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutEmail"
        android:layout_below="@id/layoutLastname">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Email"
            android:id="@+id/textViewEmail"
            android:textSize="20dp"
            android:layout_alignParentLeft="true" />

        <EditText
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:textAlignment="center"
            android:id="@+id/editTextEmail"
            android:hint="Email Address"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutPassword"
        android:layout_below="@id/layoutEmail">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Password"
            android:id="@+id/textViewPassword"
            android:textSize="20dp"
            android:layout_alignParentLeft="true" />

        <EditText
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:textAlignment="center"
            android:id="@+id/editTextPassword"
            android:hint="Password"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutConfirmPassword"
        android:layout_below="@id/layoutPassword"
        android:layout_marginBottom="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Confirm Password"
            android:id="@+id/textViewConfirmPassword"
            android:textSize="15dp"
            android:layout_alignParentLeft="true" />

        <EditText
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="8"
            android:textAlignment="center"
            android:id="@+id/editTextConfirmPassword"
            android:layout_gravity="center"
            android:hint="Confirm password"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/buttonNext"
        android:layout_gravity="center"
        android:background="#0080ff"
        android:textColor="@android:color/white"
        android:layout_below="@+id/layoutConfirmPassword"
        android:layout_centerInParent="true"
        android:onClick="goToNext"/>

</RelativeLayout>
